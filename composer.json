{
    "name": "tonysm/tailwindcss-laravel",
    "description": "This package wraps up the standalone executable version of the Tailwind CSS framework.",
    "keywords": [
        "laravel",
        "tailwindcss"
    ],
    "homepage": "https://github.com/tonysm/tailwindcss-laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Tony Messias",
            "email": "tonysm@hey.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "spatie/laravel-package-tools": "^1.9.2",
        "illuminate/contracts": "^8.73|^9.0|^10.0|^11.0"
    },
    "require-dev": {
        "nunomaduro/collision": "^5.10|^6.0|^8.0",
        "orchestra/testbench": "^6.25|^7.0|^8.0|^9.0",
        "phpunit/phpunit": "^9.5|^10.5"
    },
    "autoload": {
        "psr-4": {
            "Tonysm\\TailwindCss\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tonysm\\TailwindCss\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tonysm\\TailwindCss\\TailwindCssServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
